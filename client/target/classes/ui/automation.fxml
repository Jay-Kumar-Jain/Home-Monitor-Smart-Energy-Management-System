<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.home.client.AutomationController"
      spacing="15" style="-fx-background-color: #ffffff;">
    
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>


    <Label text="Automation Rules" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <ListView fx:id="automationList" prefHeight="200"/>
    <Label fx:id="alertLabel" text="System status..." style="-fx-text-fill: #2563eb; -fx-font-size: 14px;"/>
</VBox>
